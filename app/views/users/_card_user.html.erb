<div class="flip-info-content justify-content-center p-4">
  <div class="flip-info-card">
    <div class="flip-front flex-wrap">
      <%= cl_image_tag(user.avatar, :width => 120, :height => 100, :crop => :thumb, :gravity => :face, class: "avatar-bordered") %>
        <p>
          <span class="fa fa-star checked"></span>
          <span class="fa fa-star checked"></span>
          <span class="fa fa-star checked"></span>
          <span class="fa fa-star"></span>
          <%= user[:rating] %></p>
        <h3><%= user[:name] %></h3>
        <p>Specialty: <%= user[:specialty].capitalize %></p>
        <p><%= user.slots.first.price %>$/15min</p>
        <p>Next availablility: <%= user.slots.first.start_format %></p>
    </div>
    <div class="flip-back">
      <p><%= user[:bio] %></p>
      <p><%= user.tags.pluck(:name) %></p>
    </div>
  </div>
</div>
