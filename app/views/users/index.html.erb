<div>
  <h1 class="text-center p-4 m-4">Find someone you wanna practice a language</h1>

    <div class="content">
      <div class="profile-cards">

          <% @users.each do |user| %>
            <%= link_to user_path(user) do %>
              <div class="cards">
                <%= cl_image_tag(user.avatar, :width => 120, :height => 100, :crop => :thumb, :gravity => :face, class: "avatar-bordered") %>
                <div>
                  <p><%= user[:rating] %>4.7 (31)</p>
                  <h3><%= user[:name] %></h3>
                  <p><%= user[:specialty] %></p>
                  <p>Next availiablity<%= user[:slots] %></p>
                </div>
              </div>
              <% end %>
            <% end %>
        </div>
    </div>
</div>

