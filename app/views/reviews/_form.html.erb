<div class="container">
  <div class="content-block">
    <% @user.received_reviews.each do |review| %>
      <p><%= review.comment %></p>
      <p><%= review.rating %></p>
    <% end %>
    <br>
    <div class="container">
      <div class="content-block">
        <%= simple_form_for([ user, review ]) do |form| %>
          <%= form.input :comment, as: :text, class: "title" %>
          <%= form.input :rating, as: :integer %>
          <%= form.button :submit, class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
