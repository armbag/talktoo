<div class="bg-home">
  <div class="banner">
    <div class="container">
      <div>
       <h1>Practice a language you know with a native speaker</h1>
      </div>
      <div class="form">
        <div class="inner-form">
          <div class="input-field first-wrap">
            <%= form_tag(users_show_path, method: :get) do %>
              <%= text_field_tag :native_language,
                                  params[:native_language],
                                  class: "form-control",
                                  placeholder:'Which language do you want to practice?'%>
            <% end %>
          </div>
          <div>
            <%= submit_tag "Start", class: "btn-talk" %>
          </div>
        </div>
      </div>
    </div>
    <div>
      <%= image_tag "humans_example.png", width: 200 %>
    </div>
  </div>
</div>


<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
