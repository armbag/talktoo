function refreshForm2(innerHTML) {
  const newSlotForm = document.querySelector('#new_slot');
  newSlotForm.innerHTML = innerHTML;
}

function addSlot(slotHTML) {
  const slots = document.querySelector('#slots');
  slots.innerHTML = slots.innerHTML + slotHTML;
}

<% if @slot.errors.any? %>
  refreshForm2('<%= j render "slots/form", user: @user, slot: @slot %>');
<% else %>
  addSlot('<%= j render "slots/show", slot: @slot %>');
  refreshForm2('<%= j render "slots/form", user: @user, slot: Slot.new %>');
<% end %>
